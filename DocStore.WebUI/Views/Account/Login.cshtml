@model DocStore.WebUI.Models.LoginViewModel

@{
    ViewBag.Title = "Аутентификация";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Вход в систему</h3>
    </div>
    <div class="panel-body">
        <p class="lead">Вас приветсвует система обмена и хранения файлов, пожалуйста войдите, чтобы получить доступ к хранилищу:</p>
        @using (Html.BeginForm()) {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Имя пользователя:</label>
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Пароль:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <input type="submit" value="Войти" class="btn btn-primary" />
            @Html.ActionLink("Регистрация", "Register", null, new { @class = "btn btn-info" })
        }
    </div>
</div>