@model DocStore.WebUI.Models.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Регистрация в системе</h3>
    </div>
    <div class="panel-body">
        <p class="lead">Вас приветсвует система обмена и хранения файлов, пожалуйста зарегистрируйтесь, чтобы получить доступ к хранилищу:</p>
        @using (Html.BeginForm()) {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Логин:</label>
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Пароль:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Подтвердите пароль:</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <input type="submit" value="Зарегистрироваться" class="btn btn-primary" />
            @Html.ActionLink("Вход", "Login", null, new { @class = "btn btn-info "})
        }
    </div>
</div>

